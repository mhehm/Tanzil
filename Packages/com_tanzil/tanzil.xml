<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2" method="upgrade">
	<name>COM_TANZIL</name>
	<author>Mohammad Hasani Eghtedar</author>
	<creationDate>2014-01-02</creationDate>
	<copyright>(C) 2013 - 2014 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>m.h.eghtedar@gmail.com</authorEmail>
	<authorUrl>www.behineweb.com</authorUrl>
	<version>3.2.1</version>
	<description>COM_TANZIL_XML_DESCRIPTION</description>
	<install><!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall><!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<files folder="site">
		<folder>assets</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>resources</folder>
		<folder>views</folder>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>tanzil.php</filename>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB.com_tanzil.ini</language>
		<language tag="fa-IR">language/fa-IR.com_tanzil.ini</language>
	</languages>
	<administration>
		<menu img="class:tanzil" >COM_TANZIL</menu>
		<files folder="administrator">
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>tanzil.php</filename>
		</files>
		<languages folder="administrator">
			<language tag="en-GB">language/en-GB.com_tanzil.ini</language>
			<language tag="en-GB">language/en-GB.com_tanzil.sys.ini</language>
			<language tag="fa-IR">language/fa-IR.com_tanzil.ini</language>
			<language tag="fa-IR">language/fa-IR.com_tanzil.sys.ini</language>
		</languages>
	</administration>
</extension>
